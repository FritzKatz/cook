<% provide(:title, 'Edit User') %>
<h1>Edit User</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>      

      <%= f.submit "Save changes", :name => "save", class: "btn btn-medium btn-primary" %>
      <%= f.submit "Cancel", :name => "cancel", class: "btn btn-medium btn-primary" %>        
    <% end %>

  </div>
</div>